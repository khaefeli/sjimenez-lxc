lxc.network.type = empty
lxc.network.flags = <%= scope['lxc::lxc_networking_flags'] %>
<% if @local_lxc_set_defaults -%>
lxc.network.type = <%= scope['lxc::lxc_networking_type'] %>
lxc.network.link = <%= scope['lxc::lxc_networking_device_link'] %>
lxc.network.hwaddr = <%= scope['lxc::lxc_networking_hwaddr'] %>
<% end -%>
<% if @local_lxc_networking_extra_options -%>
<% @local_lxc_networking_extra_options.each do |k,v| -%>
<%= k -%> = <%= v %>
<% end -%>
<% end -%>
